@model WissenstestOnlineWebseite.AdminModels.AdminInfo_Model

<div class="modal fade" id="adminEdit_Modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header MyWarningHeader">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">AdminEdit: @Model.Username</h4>
            </div>
            <!-- Body Part -->
            <div class="modal-body">

                <h5><span style="font-weight: bold">Admin ID:</span> @Model.Id</h5>

                <div class="form-group">
                <h5 style="font-weight: bold">Benutzername:</h5>
                    <input placeholder="Benutzername" class="form-control input-field" type="text" value="@Model.Username" id="changeUsername" />
                </div>

                <div class="form-group">
                    <h5 style="font-weight: bold">Passwort:</h5>
                        <input placeholder="Passwort" class="form-control input-field" type="password" value="@Model.Password" id="changePassword">
                        <!--<span class="glyphicon glyphicon-eye-open" style="float:left"></span>--> <!--Passwortauge einfügen und machen--> 
                </div>

                <div class="form-group">

                </div>

            </div>


            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
