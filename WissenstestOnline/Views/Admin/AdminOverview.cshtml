@{
    ViewData["Title"] = "FF Wissenstest OÖ - AdminBereich";
}

@model WissenstestOnlineWebseite.Models.AdminOverview_Model


<div class="container">

    <h1>Willkommen</h1>

    <!--Aufgabenliste-->
    <div class="container well">
        <h3>Aufgabenübersicht</h3>
        <form asp-controller="Admin" asp-action="AdminOverview" method="post" style="margin-bottom:10px">
            <div>
                <select class="form-control" id="stations_admin" asp-items="@Model.Stationen" style="float:left;"></select>
                <input type="text" class="form-control input" placeholder="Frage eingeben..." style="float:left;">
                <button class="btn btn-info btn" type="button" style="float:left;">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
                <button class="btn btn-success" style="margin-left: 8px">+ neue Aufgabe erstellen</button>
            </div>
        </form>

        <nav id="adminListAufgaben">
            <ul class="list-group">
                @foreach (var aufgabe in Model.Aufgaben)
                {
                    <li class="list-group-item" id="@aufgabe.Aufgabe_Id">
                        <span>@aufgabe.Frage.Fragetext</span>
                        <div class="btn-group" style="float:right">
                            <button class="btn btn-info"><span class="glyphicon glyphicon-info-sign"></span></button>
                            <button class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span></button>
                            <button class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span></button>
                        </div>
                    </li>
                }

            </ul>
        </nav>

    </div>



    <!--Adminliste-->
    <div class="container well">
        <h3>Adminübersicht</h3>
        <!--Suchoptionen-->
        <nav id="adminListAdmins">
            <ul class="list-group">
                @foreach (var admin in Model.Admins)
                {
                    <li class="list-group-item">
                        <span>@admin.Username</span>
                        <div class="btn-group" style="float:right">
                            <button class="btn btn-info admin_Info" id="@admin.Admin_Id"><span class="glyphicon glyphicon-info-sign"></span></button>
                            <button class="btn btn-warning admin_warning" id="@admin.Admin_Id"><span class="glyphicon glyphicon-pencil"></span></button>
                            <button class="btn btn-danger admin_danger" id="@admin.Admin_Id"><span class="glyphicon glyphicon-remove"></span></button>
                        </div>
                    </li>
                }

            </ul>
        </nav>
    </div>

</div>

<!--Scripts-->
@section scripts{
    <script src="~/js/admin.js"></script>
}


<!--Modals-->

<!--AdminInfo-->
<div class="modal fade" id="adminInfo_Modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header MyInfoHeader">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


<!--AdminEdit-->
<div class="modal fade" id="adminEdit_Modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header MyWarningHeader">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


<!--AdminDelete-->
<div class="modal fade" id="adminDelete_Modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header MyDangerHeader">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>