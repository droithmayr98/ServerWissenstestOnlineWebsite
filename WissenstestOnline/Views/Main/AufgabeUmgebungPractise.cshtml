@{
    ViewData["Title"] = "Übungsmodus";
}

<div class="container">
    <div>
        <h3 id="FragePractise">Hier steht die Frage?</h3>
    </div>
    <hr />
    <div>
        <div id="AntwortPractise">Hier steht die Antwort!</div>
    </div>
    <hr />

    <div class="row">
        <div class="col-md-4 col-lg-4 col-sm-4 col-xs-12">
            <input type="button" id="zusatzinfoPractise" value="?" class="btn btn-info showZusatzinfo" />
        </div>
        <div class="col-md-4 col-lg-4 col-sm-4 col-xs-12">
            <p id="aktuelleStationPractise">Station</p>
        </div>
        <div class="col-md-4 col-lg-4 col-sm-4">
            <p id="aktuelleFrageCounterPractise">88/88</p>
        </div>
    </div>

    <div class="row" style="margin-top: 5px">
        <div class="col-md-6 col-sm-6 col-lg-6 col-xs-12">
            <input type="button" id="cancelAufgabePractise" value="Abbrechen" class="btn btn-danger cancel" />
        </div>
        <div class="col-md-6 col-sm-6 col-lg-6 col-xs-12">
                <input type="button" id="checkAufgabePractise" value="Check" class="btn btn-success" style="float:right;" />

        </div>
    </div>


</div>