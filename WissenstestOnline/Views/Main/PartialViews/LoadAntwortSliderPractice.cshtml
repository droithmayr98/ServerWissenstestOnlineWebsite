@model WissenstestOnlineWebseite.Models.AntwortSlider_Model


<div class="container">
    <div class="row form-group">
        <div class="col-md-3">
            <input type="range" class="form-control" id="sliderBar" min="@Model.Min" max="@Model.Max" step="@Model.Sprungweite" value="@Model.Min" oninput="changeSliderPractice(this.value, @Model.RightVal);">
        </div>
        <div class="col-md-1">
            <input style="color: black; font-weight: bold" class="form-control" type="text" id="textfield_slider" value="@Model.Min" oninput="changeTextFieldPractice(this.value, @Model.RightVal)" />
        </div>
    </div>

    <div style="display: none;" id="rightValSlider">
        <h5><span style="font-weight: bold">Richtige Antwort: </span>@Model.RightVal</h5>
    </div>

</div>

@section scripts{
    <environment names="Development">
        <script src="~/js/otherFunctions.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/otherFunctions.min.js"></script>
    </environment>
}