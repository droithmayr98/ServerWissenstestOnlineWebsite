@model WissenstestOnlineWebseite.Models.AntwortCheckBox_Model

<div class="container" id="checkBoxes">

    @foreach (var checkBox in @Model.CheckBoxen)
    {
        <div class="checkbox">
            <label id="cb_@checkBox.CheckBox_Id"><input type="checkbox" id="@checkBox.CheckBox_Id" class="checkboxInput" />@checkBox.Content</label>
        </div>
    }

    <div style="display: none;" id="rightValCheckBox">
        <h5><span style="font-weight: bold">Richtige Antwort: </span></h5>
        <ul>
            @foreach (var checkBox_rightVal in Model.CheckBoxen_RightVal)
            {
                <li>@checkBox_rightVal.Content</li>
            }
        </ul>
    </div>

</div>