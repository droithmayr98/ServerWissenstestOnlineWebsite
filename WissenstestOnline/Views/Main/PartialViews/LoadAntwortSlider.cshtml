@model WissenstestOnlineWebseite.Models.AntwortSlider_Model


<div class="container">

    <div class="row  form-group">
        <div class="col-md-3">
            <input type="range" class="form-control" id="sliderBar" min="@Model.Min" max="@Model.Max" step="@Model.Sprungweite" value="@Model.RightVal" oninput="changeSlider(this.value, @Model.RightVal);">
        </div>
        <div class="col-md-1">
            <input style="background-color: green; color: black; font-weight: bold" class="form-control" type="text" id="textfield_slider" value="@Model.RightVal" oninput="changeTextField(this.value, @Model.RightVal)" />
        </div>
    </div>




</div>


@section scripts{
    <environment names="Development">
        <script src="~/js/otherFunctions.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/otherFunctions.min.js"></script>
    </environment>
}