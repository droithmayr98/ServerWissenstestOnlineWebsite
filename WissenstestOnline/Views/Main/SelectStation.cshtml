@{
    ViewData["Title"] = "Stationsauswahl";
}


<div class="container">
    <form asp-controller="Main" asp-action="SelectedStation" method="post">


        <div id="InputValueSelectStation">

            <h4 id="headingStationen" class="h4">Stationen</h4>

            <select multiple class="form-control" id="stations" asp-items="@ViewBag.Stationen"></select>

            <h4 class="h4">Modus</h4>
            <span><input type="radio" name="mode" id="lern" value="learn" checked /> Lernen</span><br />
            <span><input type="radio" name="mode" id="practise" value="practise" /> Üben</span><br />

            <a class="btn btn-primary" role="button" aria-pressed="true" id="SelectStationButton">Starte Quiz</a>

        </div>

        <p id="StationSelectError" style="color: red"></p>

    </form>
</div>